<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityOfPointsCounter">

    <TextView
        style="@style/MyStyleButtonMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginBottom="20dp"
        android:text="Итоговый счет и статистика"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_a_name_text_view_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="4dp"
                android:text="Team A"
                android:textColor="#616161"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/basket"/>



            <TextView
                android:id="@+id/team_a_score_result"
                style="@style/MyStyleButtonMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="4dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp"
                tools:ignore="HardcodedText"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView

                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="Кол-во 3-ех оч. бросков:"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:id="@+id/team_a_3point_result"
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="Кол-во 2-ух оч. бросков:"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:id="@+id/team_a_2point_result"
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <TextView
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="Кол-во штрафных:"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:id="@+id/team_a_free_throw_result"
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>

            </RelativeLayout>

        </LinearLayout>





        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/team_b_name_text_view_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="4dp"
                android:text="Team B"
                android:textColor="#616161"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/basket"/>

            <TextView
                android:id="@+id/team_b_score_result"
                style="@style/MyStyleButtonMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="4dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp"
                tools:ignore="HardcodedText"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="Кол-во 3-ех оч. бросков:"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:id="@+id/team_b_3point_result"
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="Кол-во 2-ух оч. бросков:"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:id="@+id/team_b_2point_result"
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="Кол-во штрафных:"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:id="@+id/team_b_free_throw_result"
                    style="@style/MyStyleButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>

            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/played_time_static_text"
                style="@style/MyStyleButtonMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Фактически сыгранное время:"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/played_time"
                style="@style/MyStyleButtonMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20dp"
                tools:ignore="HardcodedText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wanna_play_time_static_text"
                style="@style/MyStyleButtonMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Запланированное время игры:"
                android:textStyle="bold"
                tools:ignore="HardcodedText,NotSibling"
                android:layout_alignBottom="@+id/played_time_static_text"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/wanna_play_time"
                style="@style/MyStyleButtonMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/wanna_play_time_static_text"
                android:layout_margin="5dp"
                android:text="0"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:textSize="20dp"/>

        </LinearLayout>


        </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/go_to_start_from_result"
            style="@style/MyStyleButtonMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="onClickMainMenuFromResult"
            android:text="На главную"
            android:textStyle="bold"
            tools:ignore="HardcodedText"/>

    </RelativeLayout>




</LinearLayout>